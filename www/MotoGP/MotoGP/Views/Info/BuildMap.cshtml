@ViewData["_Layout"]

<img src="~/images/banners/map.png"  usemap="#map"/>

<map name="map">
    @{
    foreach (var race in (List<Race>)ViewData["RaceList"])
    {
        <area shape="circle" coords="@race.X,@race.Y,20" href="@Url.Action("Info", "ShowRace", new { id = race.RaceID })"  alt="@race.Name">
    }
}
</map>

